<% layout("/layouts/boilerplate") %>
<%=success %>
<body>
  <!-- <h2>All Listings</h2>

  <a href="/listings/new" class="btn btn-primary mb-3">Create New Listing</a> -->

  <style>
    .filters{
      display: flex;
      flex-wrap: wrap;
    }
    .filter{
      text-align: center;
      margin-right: 2 rem;
      margin-top: 2rem;
      opacity :0.7;
    }
    .hover.filer{
      opacity: 1;
    }
  </style>

  <div class="filters">
    <div class="flter">
      <div><i class="fa-chisel fa-regular fa-house"></i></div>
      <p>Home</p>
    </div>
     <div class="flter">
      <div><i class="fa-solid fa-alarm-clock"></i></div>
      <p>alarem</p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% for (let listing of allListings) { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
              <p class="card-text"><strong>$<%= listing.price %></strong></p>
              <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
